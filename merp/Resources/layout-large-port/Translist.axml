<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/submenu_invlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/shop"
            android:id="@+id/butInvlist" />
        <Button
            android:text="@string/submenu_cnlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/bill"
            android:id="@+id/butCNlist" />
        <Button
            android:text="@string/submenu_solist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/sales"
            android:id="@+id/butSOlist" />
        <Button
            android:text="@string/submenu_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dp"
            android:textSize="24sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawableLeft="@drawable/summary"
            android:id="@+id/butInvsumm" />
        <Button
            android:text="@string/submenu_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:height="80dp"
            android:textSize="24sp"
            android:drawableLeft="@drawable/home"
            android:id="@+id/butMain" />
    </LinearLayout>
</ScrollView>